<h1>Accueil Histoires</h1>
<div class="row">
  {{#each stories}}
  <div class="col s12 m4">
    <div class="card">
      <div class="card-image">
       {{#if user}}
        {{{editIcon user.id ../user.id id}}}
       {{/if}}
      </div>
      <div class="card-content center-align">
        <h5>{{title}}</h5>
        <p class="story-text">
          {{#if body}}
         {{truncate (stripTags body) 150}}
          {{/if}}
          </p>
        <br>
 <div class="chip">
    <img src="{{user.image}}">
    <a href="/stories/user/{{user.id}}">{{user.firstName}} {{user.lastName}}</a>
  </div>
        
      </div>
      <div class="card-action center-align">
        <a href="/stories/show/{{id}}" class="btn grey">Lire plus&hellip;</a>
      </div>
    </div>
  </div>
{{else}}
<p>Vous n'avez edit√© aucune histoires</p>
  {{/each}}
</div>